<%= form_with(model: like) do |f| %>
<div class="container">
   <div class="row">
      <div class="text-center mb-4">
         <img class="mb-4" src="http://www.divulgavideosyt.club/img/link.png" alt="" width="72" height="72">
         <h1 class="h3 mb-3 font-weight-normal">Encurtador de Links</h1>
         <p>Coloque a url que deseja encurtar</p>
      </div>
   </div>
   <div class="row">
      <div class="col-lg-6" style="float:none;margin:auto;">
         <div class='form-group'>
            <%= f.text_field :url_ori, class:'form-control',placeholder:'Insira sua url aqui' %>
         </div>
      </div>
   </div>
   <div class="row">
      <div class="col-lg-3" style="float:none;margin:auto;">
         <button class="btn btn-lg btn-primary btn-block" type="submit">Encurtar</button>
      </div>
   </div>
   <% end %>
   <p>
   <div class="row">
      <div class="col-md-12">
         <div class="form-group">
            <div class="table">
               <table class="table table-striped table-bordered datatable-geral" id="tabela_estoque_dividas">
               <thead>
                  <tr>
                     <th>Url Original</th>
                     <th>Url encurtada</th>
                     <th>Acessos</th>
                     <th></th>
                  </tr>
               </thead>
               <tbody>
                  <% @url.each do |c| %>
                     <tr>
                        <td class="text-hider"><%= c.url_ori %></td>
                        <td><%= root_url + c.url_curt %></td>
                        <td><%= c.cont %></td>
                        <td><%= link_to 'Excluir', c, method: :delete, data: { confirm: 'Deseja Deletar Url?' } %></td>
                     </tr>
               <% end %>
            </div>
         </div>
      </div>
   </div>
</div>